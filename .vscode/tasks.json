{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "command": "dotnet clean",
      "type": "shell",
      "problemMatcher": "$msCompile",
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      }
    },
    {
      "label": "build",
      "command": "dotnet build",
      "type": "shell",
      "dependsOn": "clean",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      }
    },
    {
      "label": "clean release",
      "command": "dotnet clean --configuration Release",
      "type": "shell",
      "problemMatcher": "$msCompile",
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      }
    },
    {
      "label": "publish",
      "command": "dotnet publish --configuration Release",
      "type": "shell",
      "dependsOn": "clean release",
      "problemMatcher": "$msCompile",
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      }
    },
    {
      "label": "publish:debug",
      "command": "dotnet publish --configuration Debug",
      "type": "shell",
      "dependsOn": "build",
      "problemMatcher": "$msCompile",
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      }
    },
    {
      "type": "func",
      "dependsOn": "build",
      "options": {
        "cwd": "${workspaceFolder}/src/Sunshine.Functions/bin/Debug/netcoreapp2.1",
        "shell": {
          "executable": "powershell.exe"
        }
      },
      "command": "host start",
      "isBackground": true,
      "problemMatcher": "$func-watch"
    },
    {
      "label": "docker build",
      "type": "shell",
      "dependsOn": "publish:debug",
      "isBackground": true,
      "command": "docker build -t sunshine-downloader .",
      "options": {
        "cwd": "${workspaceFolder}/src/Sunshine.Downloader"
      }
    },
    {
      "label": "docker run",
      "type": "shell",
      "command": "docker run --rm --name sunshine-downloader --env-file=.env sunshine-downloader",
      "dependsOn": "docker build",
      "problemMatcher": [
        "$msCompile"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Sunshine.Downloader"
      }
    }
  ]
}
